Sys.getenv("JAVA_HOME")
Sys.setenv(JAVA_HOME="D:\\Program\\jdk1.7")
library(xlsx)
data<-read.xlsx("ps.xls",1)
data1<-data[1:6,2:8]
data1<-as.matrix(data1)
colnames(data1)<-c("col1","col2","col3","col4","col5","col6","col7")
rownames(data1)<-c('one','two','three','four','five','six')
fixdata<-melt(data1)
p<-ggplot(fixdata,aes(x=Var2,y=Var1,fill=value))+xlab("x轴")+ylab("y轴")
p1<-p+geom_tile()
p2<-p1+scale_fill_gradient(low='green',high='red')
print(p2)
